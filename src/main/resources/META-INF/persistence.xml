<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="postgresql-persistence-uni">
        <properties>
            <!-- PostgreSQL database -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/clientdatabase"/>
            <!-- Credentials -->
            <property name="jakarta.persistence.jdbc.user" value="client"/>
            <property name="jakarta.persistence.jdbc.password" value="client123"/>
            <!-- Agroal connection pool -->
            <!-- property name="hibernate.agroal.maxSize" value="5"/ -->
            <!-- property name="hibernate.agroal.minSize" value="5"/ -->

        </properties>
    </persistence-unit>
</persistence>
